    <script>
        // Initialize Icons
        lucide.createIcons();

        // Project Data Configuration
        const projectData = {
            'kbin': {
                title: "Knowledge Building Innovation Network",
                image: "https://images.unsplash.com/photo-1522071820081-009f0129c71c?q=80&w=800&auto=format&fit=crop",
                description: `
                    <p>The Knowledge Building Innovation Network (KBIN) connects members of knowledge building’s global community to continuously innovate on infrastructures for learning and knowledge building.</p>
                    <p>We focus on supporting K-12 teachers to create innovative ways to incorporate KB in their school curriculum, supported by an online professional development program.</p>
                `,
                links: [
                    { text: "Visit Website", url: "https://www.gse.upenn.edu/our-expertise/knowledge-building-innovation-network" }
                ]
            },
            'ai-alignment': {
                title: "AI Alignment with Education",
                image: "https://images.unsplash.com/photo-1531482615713-2afd69097998?q=80&w=800&auto=format&fit=crop",
                description: `
                    <p>This project critically examines how GenAI tools can uphold fundamental educational values. By combining technological evaluations with forward-looking design explorations, we aim to shape the next generation of AI-driven educational technologies.</p>
                    <p>We currrently design a flexible workspace—CraftPad—to engage teachers as designers in the design of KB-aligned lessons, supported by AI-enhanced AI lesson design tool will empower teachers to augment pedagogical design capacity and gain more knowledge on KB theory and practices.</p>
                `,
                links: [
                    { text: "CraftPad", url: "https://www.craftpad.app/" }
                ]
            }
        };

        // Modal Logic
        function openProjectModal(projectId) {
            const data = projectData[projectId];
            if (!data) return;

            document.getElementById('modal-title').innerText = data.title;
            document.getElementById('modal-image').src = data.image;
            document.getElementById('modal-content').innerHTML = data.description;
            
            // Build links
            const linksContainer = document.getElementById('modal-links');
            linksContainer.innerHTML = '';
            data.links.forEach(link => {
                const a = document.createElement('a');
                a.href = link.url;
                a.target = '_blank';
                a.className = "flex items-center gap-2 px-4 py-2 bg-[#011F5B] text-white rounded-md hover:bg-[#001236] transition-colors text-sm font-medium";
                a.innerHTML = `${link.text} <i data-lucide="external-link" class="w-3 h-3"></i>`;
                linksContainer.appendChild(a);
            });
            lucide.createIcons();

            // Show Modal
            const modal = document.getElementById('project-modal');
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            document.body.style.overflow = 'hidden'; // Prevent background scrolling
        }

        function closeProjectModal(event) {
            // Close if clicked on background or close button (if event is passed)
            if (event && event.target !== event.currentTarget) return; // If clicking inside modal content, don't close (handled by stopPropagation)
            
            const modal = document.getElementById('project-modal');
            modal.classList.add('hidden');
            modal.classList.remove('flex');
            document.body.style.overflow = '';
        }

        // Simple Tab Switching Logic
        function switchTab(tabId) {
            // Hide all tabs
            document.querySelectorAll('.tab-content').forEach(el => {
                el.classList.add('hidden');
                el.classList.remove('fade-in');
            });
            
            // Remove active style from all links
            document.querySelectorAll('.nav-link').forEach(el => {
                el.classList.remove('active');
            });

            // Show selected tab
            const selectedTab = document.getElementById(tabId);
            selectedTab.classList.remove('hidden');
            // Trigger reflow to restart animation
            void selectedTab.offsetWidth; 
            selectedTab.classList.add('fade-in');

            // Add active style to selected link
            document.getElementById('nav-' + tabId).classList.add('active');
        }

        // Initialize default tab
        switchTab('about');
    </script>
</body>
</html>
